{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2017",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "outDir": "build/",
    "sourceMap": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noPropertyAccessFromIndexSignature": false,
    "lib": [
      "es2020",
      "ESNext",
      "dom"
    ]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": ["node_modules/**/*"]
}